<p id="notice"><%= notice %></p>

<h1>Posts</h1>

<table>
  <thead>
    <tr>
      <th>Tilte</th>
      <th>User</th>
      
    </tr>
  </thead>

  <tbody>
    <% @posts.each do |post| %>
      <tr>
        <td><%= link_to post.tilte, post %></td>
        <td><%= @users.find(post.user_id).email %></td>
        <td>
          <% if user_signed_in? %>
            <%if post.user_id == current_user.id %>
              <%= link_to 'Edit', edit_post_path(post) %>
            <% end %>
          <% else %>
          <% end %>
        </td>
        <td>
          <% if user_signed_in? %>
            <% if post.user_id == current_user.id %>
              <%= link_to 'Destroy', post, method: :delete, data: { confirm: 'Are you sure?' } %>
            <% end %>
          <% else %>
          <% end %>
        </td>
      </tr>
    <% end %>
  </tbody>
</table>

<br>


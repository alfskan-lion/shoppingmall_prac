    			<!-- /footer widget -->
    
    			<!-- footer subscribe -->
    			<div class="col-md-3 col-sm-6 col-xs-6">
    				<div class="footer">
    					<h3 class="footer-header">Stay Connected</h3>
    					<p>Lorem ipsum dolor sit amet, consectetur adipisicing elit, sed do eiusmod tempor.</p>
